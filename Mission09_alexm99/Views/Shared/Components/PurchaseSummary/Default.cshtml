@model Mission09_alexm99.Pages.PurchaseModel

<div class="">
    @if (Model.basket.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @*@Model.line.Sum(x => x.Quantity) item(s)*@
            @Model.basket.Items.Sum(x => x.Quantity) item(s)
            @Model.basket.CalculateTotal().ToString("c")
        </small>
    }
<a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Purchase"
   asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
    <i class="fa fa-shopping-cart"></i>
</a>
</div>